                </div>
                <div class="box-body">
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Clave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].EsAdministrador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Creado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Modificado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EsAdministrador)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modificado)
        </td>
        <td>
			<a class="btn btn-primary btn-xs" href="@Url.Action("Details", new { id=item.UsuarioId })">
				<i class="fa fa-file" aria-hidden="true"></i> Detalle
            </a>
			<a class="btn btn-success btn-xs" href="@Url.Action("Edit", new { id=item.UsuarioId })">
				<i class="fa fa-pencil" aria-hidden="true"></i> Editar
            </a>
			<a class="btn btn-danger btn-xs" href="@Url.Action("Delete", new { id=item.UsuarioId })">
				<i class="fa fa-trash" aria-hidden="true"></i> Eliminar
            </a>
        </td>
    </tr>
}

</table>
<nav>
                        <ul class="pagination pagination-sm">
                            @for (int x = 1; x < Model.Pager.TotalPages + 1; x++)
                            {
                                if (x == Model.Pager.CurrentPage)
                                {
                                    <li class="active"><a href="#">@x <span class="sr-only">(current)</span></a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Index", new { page = @x, Search = @ViewBag.Search })">@x </a></li>
                                }
                            }
                        </ul>
                   </nav>
                </div>
            </div>
        </div>
    </div>
</section>
