@model WebTS2.Controllers.CuentaContableIndexViewModel

@{
    ViewBag.Title = "Lista";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Lista CuentaContable</h3>
                    <div class="pull-right box-tools">
                        <table>
                            <tr>
                                <td style="padding-right: 5px">
                                    @using (Html.BeginForm("Index", "TablaActividades", FormMethod.Get))
                                    {
                                        <div class="input-group">
                                            @Html.TextBox("Search", null, new { @class = "input-sm form-control" })
                                            <span class="input-group-btn">
                                                <button class="btn btn-sm btn-primary" type="submit"> <i class="fa fa-search"></i></button>
                                            </span>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("Create")" data-toggle="tooltip" title="" data-original-title="Agregar">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>
                                Numero de Cuenta
                            </th>
                            <th>
                                Cuenta
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cuenta)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td>
                                    @Html.ActionLink("Detalle", "Details", new { id = item.idempresa, id2 = item.idcuenta }, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Editar", "Edit", new { id = item.idempresa, id2 = item.idcuenta }, new { @class = "btn btn-success btn-xs" })
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idempresa, id2 = item.idcuenta }, new { @class = "btn btn-danger btn-xs" })
                                </td>
                            </tr>
                        }

                    </table>
                    <nav>
                        <ul class="pagination pagination-sm">
                            @for (int x = 1; x < Model.Pager.TotalPages + 1; x++)
                            {
                                if (x == Model.Pager.CurrentPage)
                                {
                                    <li class="active"><a href="#">@x <span class="sr-only">(current)</span></a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Index", new { page = @x, Search = @ViewBag.Search })">@x </a></li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
