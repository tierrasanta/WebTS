@model WebTS2.Models.PlantillaCultivoDetalle

@{
    ViewBag.Title = "Detalle";
}



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">PlantillaCultivoDetalle</h3>
                </div>
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TablaActividades.descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TablaActividades.descripcion)
                        </dd>    
                    </dl>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            @*@Html.ActionLink("Edita", "Edit", new { id = Model.idplantilladetalle }, new { @class = "btn btn-primary" })*@
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })


                        </div>
                    </div>
                    <h3 class="box-title">Lotes</h3>
                    @Html.ActionLink("Agregar", "Create", new { idactividad = ViewBag.idactividad }, new { @class = "btn btn-primary" })
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>
                                lote
                            </th>
                            <th>
                                Costo
                            </th>
                            <th>

                            </th>
                        </tr>
                        @foreach (var item in ViewBag.list)
                        {
                            <tr>
                                <td>@item.descripcion</td>
                                <td>@item.costo</td>
                            </tr>
                        }
</table>
                        
</div>
            </div>
        </div>
    </div>
</section>



